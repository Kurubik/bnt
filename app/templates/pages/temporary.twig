{% extends 'index.twig' %}

{% block page %}

    <section class="img-B_h">
        <img alt="" src="{{ app.request.basepath }}/public/images/home.jpg" title="" class="img-B">

        <div class="img-B_text">
            <h1 class="e-heading c__b">{{ index.heading }}</h1>
            <div class="img-B_title">{{ index.subheading }}</div>
        </div>

        <div class="img-B_info-box">{{ index.info_box | raw }}</div>

    </section>

    <section class="plans-b plans-b-tmp">
      {#<iframe style="position:fixed; height:600px; width:1200px; top:50%; left:50%; transform:translate(-50%,-50%); z-index:9999" src="https://terminal-sandbox.ecommpay.com/?site_id=245&amount=100&external_id=1&signature={{ signature }}" width="400" height="600" align="center"></iframe>#}
        {% for plans,items in index.plans_banner %}
            <div class="plans-s {{ plans }}">
                <h3 class="e-title__it title_border">{{ items.title }}</h3>
                {% for banner in items.content %}
                    <div class="plans-i plan_{{ loop.index }}">
                        <div class="plans-bg"></div>
                        <div class="plans-content banner_state">
                            <h4 class="e-title__hv hv_big">{{ banner.title | raw }}</h4>
                            <div class="plans-t_text">{{ banner.top_text }}</div>
                            <a href="" class="plans-b_text-more">{{ banner.bottom_text }}<div class="plans-l">{{ banner.link_text }}</div></a>
                        </div>
                        <a href="" class="plans-button">
                            <div class="plans-button_text">{{ banner.button_text }}<i class="ico-a_right"></i></div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </section>
    {#{% include 'popups/terms.twig' %}#}
    {#{% include 'popups/sent.twig' %}#}
    {% include 'popups/order_sim.twig' %}
    {% include 'interface/banners.twig' %}
{% endblock %}