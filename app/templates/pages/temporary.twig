{% extends 'index.twig' %}

{% block page %}

    <section class="img-B_h">
        <img alt="" src="{{ app.request.basepath }}/public/images/home.jpg" title="" class="img-B">

        <div class="img-B_text">
            <h1 class="e-heading c__b">{{ index.heading }}</h1>
            <div class="img-B_title">{{ index.subheading }}</div>
        </div>

        <div class="img-B_info-box">{{ index.info_box | raw }}</div>

    </section>
    <section class="plans-b plans-b-tmp">
        {% for plans,items in index.plans_banner %}
            <div class="plans-s {{ plans }}">
                <h3 class="e-title__it title_border">{{ items.title }}</h3>
                {% for banner, title in items.content %}
                    <div class="plans-i plan_{{ loop.index }}">
                        <div class="plans-bg"></div>
                        <div class="plans-content banner_state">
                            <h4 class="e-title__hv hv_big">{{ title.title | raw }}</h4>
                            <div class="plans-t_text">{{ title.top_text }}</div>
                            <a href="" class="plans-b_text-more">{{ title.bottom_text }}<div class="plans-l">{{ title.link_text }}</div></a>
                        </div>
                        <a href="{{ path(title.link, {_locale: app.request.locale, plan: title.plan_name}) }}" class="plans-button">
                            <div class="plans-button_text">{{ title.button_text }}<i class="ico-a_right"></i></div>
                        </a>
                    </div>
                {% endfor %}
            </div>
          <div class="plans-s business">
            <h3 class="e-title__it title_border">{{  index.business.title }}</h3>
            <div class="plans-i plan_1">
              <div class="plans-content banner_state">
                <h4 class="e-title__hv hv_big">{{ index.business.content.business.title }}</h4>
                <div class="plans-t_text">{{ index.business.content.business.top_text }}</div>
                <a href="" class="plans-b_text-more">{{ index.business.content.business.bottom_text }}<div class="plans-l">{{ index.business.content.business.link_text }}</div></a>
              </div>
              <a href="" class="plans-button show_popup" data-action="plan" data-plan="plan">
                <div class="plans-button_text">{{ index.business.content.business.button_text }}<i class="ico-a_right"></i></div>
              </a>
            </div>
          </div>
        {% endfor %}
    </section>
  {% include 'interface/banners.twig' %}
{% endblock %}