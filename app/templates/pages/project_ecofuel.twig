{% extends 'index.twig' %}
{% block page %}
<div class="e-page_project">
    <div class="container">
        <div class="col-xs-3">
            <ul class="project-sidemenu">
                {% for option in index.project_page.sidemenu %}
                    {% if currentRoute == option.link %}
                        <li class="selected">
                            <span>
                                {{ option.title|raw }}
                            </span>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ option.link }}">
                                {{ option.title|raw }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <div class="e-quarterblock project-sidemenu_afterfiller"></div>
        </div>
        <div class="col-xs-9">
            <div class="project-mainbanner" style="background-image: url('{{ app.request.basepath }}{{ index.heading.backgroud }}')">
                <h1 class="e-wide_title">{{ index.heading.title }}</h1>
                <div class="project-mainbanner_text">
                    {{ index.heading.text }}
                </div>
            </div>
            <div class="project-content_holder e-innerpage_content_paddings">
                <div class="project-profile">
                    <h2 class="project-profile_heading">
                        {{ index.project_page.project_headings.project_profile }}
                    </h2>
                    <div class="project-profile_text">{{ index.profile_text }}</div>
                    <ul class="project-profile_properties">
                        {% for property in index.project_proreties%}
                            <li>
                                <div class="project-profile_property_heading">
                                    {{ property.heading|raw }}
                                </div>
                                <div class="project-profile_property_detail">
                                    {{ property.text|raw }}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                    <h2 class="project-profile_heading">
                        {{ index.project_page.project_headings.vcg_technology }}
                    </h2>
                    <div class="container project-technoblock_holder">
                        {% for data in index.technology_blocks %}
                            <div class="col-xs-4 project-technoblock">
                                <div class="project-technoblock_logo_container">
                                    <img class="project-techoblock_logo {{ data.class }}" src="{{ app.request.basepath }}{{ data.logo }}">
                                </div>
                                <h3 class="project-technoblock_title">{{ data.title|raw }}</h3>
                                <div class="project-technoblock_text">{{ data.text|raw }}</div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container project-wideimage_container">
        <div class="col-xs-3">
            <div class="e-around_left_column_paddings project-wideimage_text">
                {{ index.wideimage_text }}
            </div>
        </div>
        <div class="col-xs-9">
            <img class="project-wideimage" src="{{ app.request.basepath }}{{ index.wideimage1 }}">
        </div>
    </div>
    <div class="container">
        <div class="col-xs-offset-3 col-xs-9">
            <div class="e-left_paddings_right_column">
                <h2 class="project-profile_heading">{{ index.heading1 }}</h2>
                <div class="project-profile_text">{{ index.text1 }}</div>
            </div>
        </div>
    </div>
    <div class="container project-progress_container">
        <div class="col-xs-3">
            <div class="e-left_paddings">
                <h3 class="project-technoblock_title">{{ index.next_steps.title }}</h3>
                <ul class="project-steps">
                    {% for step in index.next_steps.steps %}
                        <li>
                            <img class="project-steps_icon" src="{{ app.request.basepath }}{{ step.icon }}">
                            <div class="project-steps_title">{{ step.title|raw }}</div>
                            <img class="project-steps_arrow_ico" src="{{ app.request.basepath }}/public/assets/images/arrow_down.png">
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="col-xs-9">
            <div class="e-left_paddings_right_column">
                <h3 class="project-technoblock_title">{{ index.progress_block.title }}</h3>
                <ul class="project-progress_list">
                    {% for progress in index.progress_block.progress %}
                        <li>{{ progress|raw }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col-xs-3">
            <div class="e-left_right_left_column_paddings project-wideimage_text">
                {{ index.project_shedule.sidetext }}
            </div>
        </div>
        <div class="col-xs-9">
            <div class="e-left_paddings_right_column">
                <h3 class="project-technoblock_title">{{ index.project_shedule.maintitle }}</h3>
                <img class="project-wideimage e-wideimage_after_title" src="{{ app.request.basepath }}{{ index.project_shedule.wideimage }}">
            </div>
        </div>
    </div>
</div>
{% endblock %}

