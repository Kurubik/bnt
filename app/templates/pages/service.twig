{% extends 'index.twig' %}

{% block page %}
  <section class="p_inner">
    <div class="block-B">
      <div class="e-heading-inner">
        <h1 class="e-heading c__w">{{ index.page_title | raw }}</h1>
      </div>
      <a href="{{ path(data.plans_button.link, {_locale: app.request.locale}) }}" class="e-inner-banner bg__trans_grey">
        <div class="t-banner_s">
          <span class="t-banner_t">{{ data.plans_button.text }}</span>
          <div class="t-banner_h">{{ data.plans_button.title }}<i class="ico-a_big-right"></i></div>
        </div>
      </a>
    </div>
    <section class="e-content_container">
      <div class="e-left_column">
        <h2 class="e-title__it title_border">{{ index.unit.title }}</h2>
        <div class="service_content">
          <i class="svg">{% include 'svg/flat_rate.twig' %}</i>
          <h3 class="service_title c__w">{{ index.unit.heading }}</h3>
          <div class="service_text c__w">{{ index.unit.text }}</div>
          <div class="service_text c__w">{{ index.unit.more_text }}</div>
        </div>
      </div>
      <div class="e-right_column margin_top">
        <h2 class="e-title__it title_border">{{ index.number.title }}</h2>
        <div class="service_content">
          <div class="service_text c__w">{{ index.number.text }}</div>
          {% if index.number.banner is defined %}
            <div class="service_banner">
              <div class="service_banner-text">{{ index.number.banner.text }}</div>
              <div class="service_banner-info">
                <div class="service_banner-left_text">{{ index.number.banner.left_text | raw }}</div>
                <div class="service_banner-right_section">
                  <ul class="service_banner-icons">
                    <li>
                      <i class="ico-circle_text">{{ index.number.banner.first_number }}</i>
                      <i class="ico-a_small"></i>
                      <div class="service_banner-country">{{ index.number.banner.first_number_title | raw }}</div>
                      <i class="ico-a_small"></i>
                    </li>
                    <li>
                      <i class="ico-circle_text">{{ index.number.banner.second_number  }}</i>
                      <i class="ico-a_small"></i>
                      <div class="service_banner-country">{{ index.number.banner.second_number_title | raw }}</div>
                      <i class="ico-a_small"></i>
                    </li>
                  </ul>
                  <i class="svg margin-left">{% include 'svg/phone.twig' %}</i>
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
      <div class="map_section">
        <h2 class="e-title__it title_border">{{ index.country.title }}</h2>
        <div class="map_image"></div>
      </div>
    </section>
  </section>
{% endblock %}