<header>
    <div class="header-container">
        <section class="header-top_section">
            <ul class="header_menu header-lang_selector">
                {% for option,lang in data.lang %}
                    {% if app.request.attributes.get('_locale') == lang %}
                        <li>
                            <span>
                                {{ option }}
                            </span>

                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path(app.request.attributes.get('_route'), {'_locale': option}) }}">
                                {{ option }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            <ul class="header_menu header-top_menu">
               {% for option in data.head_top_menu %}
                   <li>
                       <a href="{{ path(option.link, {_locale: app.request.locale}) }}">
                           {{ option.title }}
                       </a>
                   </li>
               {% endfor %}
            </ul>
        </section>
        <section class="header-lower_section">
            <a href="/">
                <img class="header-logo" src="{{ app.request.basepath }}/public/assets/images/logo.png">
            </a>
            <ul class="header-lower_menu">
                {% for option in data.head_low_menu %}
                    {% if option.parent == app.request.attributes.get('parent') %}
                        <li>
                            <span>
                                {{ option.title|raw }}
                            </span>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path(option.link, {_locale: app.request.locale}) }}">
                                {{ option.title|raw }}
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </section>
    </div>
</header>
