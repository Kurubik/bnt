@import 'icons'
@import 'list'
@import 'contacts'
@import 'banner'

.e-heading
  font-family heavy
  font-size 48px
  line-height 60px
  margin 0
  padding 0
  width 585px
  .e-inner_heading &
    display inline-block
    width 586px
    text-align left


.e-inner_heading
  text-align right


.e-heading_question
  position absolute
  top -25px
  color rgba(255,255,255, 0.4)
  font-family reg
  font-size 16px


.e-title__hv
  font-family heavy
  color #fff
  margin 0
  padding 0
  &.hv_big
    font-size 24px
    line-height 28px
    text-transform uppercase
    letter-spacing 0.1em
  &.hv_med
    font-size 21px
  &.hv_small
    font-size 20px
  &.hv_small-upper
    text-transform uppercase
    letter-spacing 0.15em
    font-size 20px


/*
  .text_banner-t => banner text area
  .text_banner-h => banner title
*/

.t-banner_t
  font-size 16px
  line-height 22px
  font-family italic
  color #fff
  display block
  width 266px
  margin-bottom 34px


.t-banner_h
  font-size 20px
  color #fff
  font-family heavy
  text-transform uppercase
  letter-spacing 0.15em
  position relative
  display inline-block
  padding-right 20px
  white-space nowrap
  text-overflow ellipsis
  overflow hidden
  max-width 100%
  box-sizing border-box


.t-banner
  position absolute
  display block
  width 416px
  height 160px
  box-sizing border-box
  padding 30px
  bottom -65px
  right -100px

.t-banner_s
  position relative


.e-title__it
  font-size 24px
  color #fff
  margin 0
  padding 0
  font-family italic
  &.title_border
    border-bottom 2px solid rgba(255, 255, 255, 0.2)
    padding-bottom 15px
    margin-bottom 25px
  &:first-letter
    text-transform uppercase



/*
  c__* => color {black/green/yellow}
*/



.c__b
  color #000

.c__w
  color #fff

.bg__brown
  background-color rgba(73,64,56, 0.8)
  .modify_bg &
    background-color #473f39

.bg__trans_grey
  background-color rgba(87,93,91,0.8)

.e-support_holder
  position relative
  .right_side &
    border-top 2px solid rgba(98,105,103,0.2)
    padding-top 30px


.e-support-text
  margin-bottom 15px
  font-size 14px
  line-height 20px
  color rgba(255,255,255,0.65)

/* links */

.e-link
  font-size 16px
  font-family reg
  color #fff
  display inline-block
  height 46px
  white-space nowrap
  position relative
  line-height 46px
  box-sizing border-box
  padding 0 40px 0 28px
  .e-heading-inner &
    margin-top 34px

.e-inner-banner
  position absolute
  left 780px
  top 410px
  width 415px
  height 160px
  padding 30px
  box-sizing border-box

.e-content_container
  display block
  position relative
  margin 0 auto
  margin-top 62px
  width 1000px

.e-left_column, .e-right_column
  display inline-block
  vertical-align top
  position relative
  width 485px

.e-right_column
  margin-left 30px
  &.margin_top
    margin-top 135px

.e-column_block
  position relative
  font-size 16px
  line-height 22px
  section
    margin-top 42px
    color #ffffff

.e-column-list
  display inline-block
  list-style none
  margin 0
  padding 0
  padding-top 20px
  width 140px
  border-top 1px solid rgba(98, 105, 103, 1)
  margin-left 32px
  &:first-child
    margin-left 0
  li
    font-family heavy
    font-size 14px
    line-height 16px
    letter-spacing 0.1em
    text-transform uppercase
    &:first-child
      font-size 36px
      line-height 43px
    &:last-child
      margin-top 14px
      font-family italic
      line-height 20px
      letter-spacing normal
      text-transform none

.e-column_img
  display block
  position relative
  margin 0 auto
  margin-bottom -30px
  svg
    display inherit
    position relative
    margin auto

.e-after_column_content
  margin-top 70px
  margin-bottom 120px


.column_columns
  list-style none
  margin 30px 0 0 0
  padding 0
  li
    display inline-block
    vertical-align top
    position relative
    width 29%
    border-top 1px solid #fff
    padding-top 20px
    + li
      margin-left 6.2%

.columns_title
  color rgb(188,197,203)
  text-transform uppercase
  font-family heavy
  font-size 14px
  letter-spacing 0.1em
  margin 0
  padding 0

.columns_text
  font-family italic
  font-size 14px
  line-height 20px
  color #fff
  margin-top 12px

.service_banner-right_svg
  position absolute
  top 50%
  transform translateY(-50%)
  width 48%
  right 20px


.svg_section
  display inline-block
  vertical-align middle
  &.width_static
      width 48px
    .svg
      width 48px
  + .svg_section
    margin-left 21px
  &.svg_section-width
    margin-left 9px

.svg_white
  svg
    path
      fill #fff
    line, rect
      stroke #fff


.svg_section-width
  width 90px
  margin-left 13px
  img
    display inline-block
    margin 2px 3px

.svg_section
  .svg_charges
    width 37px
    height auto
    max-height 52px


.e-popup_holder
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.85)
  z-index 100
  display none


.e-popup_container
  position absolute
  left 50%
  top 50%
  transform translate(-50%,-100%)
  opacity 0
  overflow-x hidden
  overflow-y auto
  max-height 80%
  background-color rgba(0,0,0,0.8)
  transition all .2s ease-in-out
  &.showed
    opacity 1
    transform translate(-50%,-50%)



.e-popup_section
  padding 40px 105px 32px 105px
  display none


.e_back
  position absolute
  right 0
  top 15px
  color #fff
  font-size 14px
  display block
  line-height 20px
  padding-left 16px
  transition opacity .2s ease-in-out
  .ico-a_right
    transform scale(-1)
    left 0
    top 8px

  &:hover
    opacity .5


.e-overlay
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  z-index 1
  background-color rgba(0,0,0, 0.2)