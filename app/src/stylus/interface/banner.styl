.two_banner
  margin 0 100px
  .plans-bg
    background-color rgba(0,0,0, 0.53)


.banner_info
  position relative
  width 48%
  display inline-block
  vertical-align top
  box-sizing border-box
  padding 15px 20px 34px 20px
  & + .banner_info
    margin-left 4%


.banner_content
  position relative
  z-index 3


.banner_text
  font-size 14px
  line-height 20px
  color rgba(255,255,255, 0.65)
  position relative
  margin-top 26px

.banner_svg
  display inline-block
  vertical-align top
  width 4.5%
  margin-right 3.5%
  svg
    width 100% !important


.banner_text-content
  display inline-block
  vertical-align top
  width 82%

