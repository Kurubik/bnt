/**
 .menu-t => text field menu
 .menu-i => menu item
**/

.menu
  list-style none
  margin 0
  padding 0
  font-family bold
  font-size 16px
  &.home
    color basecolor

  &.inner
    color #fff

  .header &
    position absolute
    right 205px
    top 51px

  .footer &
    color #fff
    position absolute
    top 35px
    left 150px


.menu-i
  display inline-block
  + .menu-i
    margin-left 34px

.menu-t
  display block
  &:first-letter
    text-transform uppercase
  a&
    transition color .3s ease-in-out
    &:hover
      color menuHover
  span&
    color menuHover



.menu-i-info
  position relative
  .menu-t
    font-size 14px
    line-height 18px
    font-family italic
    color #9c9c9c
    transition opacity 0.2s ease-in-out
    cursor pointer
    &:hover
      opacity .5
  + .menu-i-info
    margin-left 28px
    &:after
      display block
      position absolute
      width 4px
      height 4px
      content ''
      border-radius 50%
      top 7px
      left -15px
      background-color #9c9c9c
