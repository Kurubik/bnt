.plans-b
  margin 148px 100px 0 100px
  clearfix()

.plans-t_text
  font-size 14px
  line-height 18px
  font-family italic
  color rgb(156,156,156)
  margin-top 8px
  padding-bottom 22px


.plans-b_text
  font-size 14px
  line-height 20px
  font-family reg
  color rgba(255,255,255,0.45)
  margin-top 50px
  display block


.plans-l
  color #fff
  font-family italic
  display block
  margin-top 7px


.plans-button
  color #fff
  display block
  position absolute
  font-family italic
  font-size 18px
  height 60px
  min-width 160px
  box-sizing border-box
  bottom -40px
  right -15px
  &.brown
    background-color #484641
  clearfix()
  padding-left 13px
  &_text
    top 26px
    margin-right 15px
    float right
    position relative
    padding-right 17px
    white-space nowrap
    box-sizing border-box



.plans-s
  float left
  &:nth-child(even)
    margin-left 30px


.plans-bg
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  z-index 2


.plans-content
  position relative
  z-index 3
  height 100%


.plans-i
  width 226px
  min-height 305px
  display inline-block
  position relative
  vertical-align top
  box-sizing border-box
  padding 15px 20px 0 20px
  + .plans-i
    margin-left 32px
  .individual &
    &.plan_1
      .plans-button
        background-color #414140
    &.plan_2
      .plans-button
        background-color #434a4f
    &.plan_3
      .plans-button
        background-color #595e5c
    .plans-bg
      background-color rgba(0,0,0, 0.53)
  .business &
    &.plan_1
      .plans-button
        background-color #484641
    .plans-bg
      background-color rgba(0,0,0, 0.3)


.plan_info-list
  margin 8px 0 15px 0
  padding 0
  color #fff
  list-style none
  font-size 16px
  line-height 24px

  .base_tarif
    display block
    margin-top 3px

  &.hidden
    opacity 0
    height 376px
    overflow hidden
  i
    font-family italic

  li
    padding 10px 0


.plans_info
  display inline-block
  position relative
  margin-top 65px
  vertical-align top
  &.business
    width 225px
    border-top 2px solid rgba(98,105,103, 0.2)
  .suspend
    color rgb(135,135,135)



.plans_section
  margin-right 30px

.plan_general-list
  position absolute
  bottom 110px
  z-index 3
  right 0
  width 100%
  margin 0
  background rgba(0,0,0, 0.5)
  padding 0
  text-align center
  color #fff
  list-style none
  font-size 16px
  line-height 24px
  li
    padding 19px 0 17px 0
    margin 0 25px
    + li
      border-top 1px dashed rgba(98, 105, 103, 0.1)

.plan_download
  text-align center
  padding 29px 0 35px 0

.plan_download-content
  display inline-block
  padding-left 5px


.plan_download-text
  display inline-block
  width 80px
  vertical-align middle
  color rgb(135,135,135)
  font-family italic
  font-size 14px
  line-height 16px
  margin-left 14px


.business_heading
  margin 39px 0 0 0
  padding 0
  font-family italic
  font-size 24px
  color #fff
  font-weight 100


.business_list
  list-style none
  margin 3px 0 0 0
  padding 0
  color #fff
  li
    padding 15px 0
    font-size 16px
    line-height 20px
    font-family reg
    + li
      border-top 1px dashed #414140


.business_button-arrow
  position relative
  display inline-block
  font-family italic
  font-size 16px
  color #fff
  padding 0 22px 1px 0
  margin-top 4px


.business_button
  display block
  margin-top 6px


.business_button_text
  color rgba(255,255,255, 0.65)
  font-size 14px
  line-height 20px


.plans_section
  display inline-block
  vertical-align top
  position relative
