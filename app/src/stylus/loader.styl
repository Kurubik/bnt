#loader
  position fixed
  height 100%
  width 100%
  z-index 10
  top 0
  left 0


@keyframes loader
  0%
    transform rotate(0deg)
  50%
    transform rotate(180deg)
  100%
    transform rotate(180deg)



.loader_section
  position absolute
  width 12px
  height 12px
  border-radius 50%
  background-color #fff
  top 50%
  left 50%
  transform translate(-50%, -50%)
  transform-origin  50% 50%
  animation loader 1s ease-in-out infinite
  &:before
    content ''
    position absolute
    background-color rgba(255, 255, 255, .5)
    top 0px
    left -25px
    height 12px
    width 12px
    border-radius 50%
  &:after
    content ''
    position absolute
    background-color rgba(255, 255 ,255, .5)
    top 0px
    left 25px
    height 12px
    width 12px
    border-radius 50%
