font-url(file)
  return '../assets/fonts/' + file

webfont(family, file, hack-chrome-windows = false)
  @font-face
    font-family family
    src url(font-url(file + '.otf'))
    font-weight normal
    font-style normal

    if hack-chrome-windows
      @media screen and (-webkit-min-device-pixel-ratio:0)
        @font-face
          font-family family
          src url(font-url(file + '.svg#'+ family)) format('svg')