.service_title
  font-family heavy
  font-size 21px
  line-height 30px
  display inline-block
  width 83%
  margin 0
  padding 0
  vertical-align top
  text-transform uppercase
  letter-spacing 0.05em
  margin-left 6%


.service_content
  .svg
    display inline-block
    vertical-align top
    &.margin-left
      margin-left 15px

.service_text
  font-family reg
  font-size 16px
  line-height 22px
  margin-top 25px


.service_banner-text
  font-size 14px
  line-height 20px
  color rgba(255,255,255, 0.65)


.service_banner-left_text
  font-size 14px
  line-height 20px
  color rgba(255,255,255, 0.65)
  width 36%
  float left
  h4
    margin 0
    padding 0
    color rgb(246,247,218)


.service_banner-info
  margin-top 30px
  clearfix()


.service_banner-right_section
  float right
  color #fff
  width 58%


.service_banner
  background-color rgba(0,0,0, 0.4)
  padding 20px 20px 38px 20px
  position relative
  margin-top 30px


.service_banner-icons
  list-style none
  margin 0
  padding 0
  display inline-block
  li + li
    margin-top 20px

.service_banner-country
  display inline-block
  font-size 12px
  line-height 14px
  vertical-align middle
  text-align center
  width 108px
  margin 0 5px


.map_section
  margin-top 55px
  position relative

.map_image
  position absolute
  width 100%
  height 100%
