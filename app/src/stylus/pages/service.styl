.service_title
  font-family heavy
  font-size 21px
  line-height 30px
  display inline-block
  width 83%
  margin 0
  padding 0
  vertical-align top
  text-transform uppercase
  letter-spacing 0.05em
  margin-left 6%


.service_content
  .svg
    display inline-block
    vertical-align top
    svg
      display block
    &.margin-left
      margin-left 15px

.service_text
  font-family reg
  font-size 16px
  line-height 22px
  margin-top 25px


.service_banner-text
  font-size 14px
  line-height 20px
  color rgba(255,255,255, 0.65)


.service_banner-left_text
  font-size 14px
  line-height 20px
  color rgba(255,255,255, 0.65)
  width 38.5%
  float left
  h4
    margin 0
    padding 0
    margin-bottom 15px
    color rgb(246,247,218)


.service_banner-info
  margin-top 30px
  clearfix()

.column_svg
  height 50px
  margin-bottom 8px
  position relative
  .svg
    position absolute
    left 0
    top 50%
    transform translateY(-50%)

.service_banner-right_section
  float right
  color #fff
  width 58%


.service_banner
  background-color rgba(0,0,0, 0.4)
  padding 20px
  position relative
  margin-top 30px
  clearfix()


.service_banner-icons
  list-style none
  margin 0
  padding 0
  display inline-block
  li + li
    margin-top 20px

.service_banner-country
  display inline-block
  font-size 12px
  line-height 14px
  vertical-align middle
  text-align center
  width 108px
  margin 0 5px


.map_section
  margin-top 55px
  position relative
  min-height 599px

.map_image
  position absolute
  width 100%
  height 599px
  background url('../images/map.png') center top  no-repeat
  background-size cover


.map_title-holder
  position relative
  z-index 2
  width 480px
  margin 50px auto 0 auto

.map_subtitle
  font-family italic
  font-size 14px
  line-height 20px
  color rgb(135,135,135)
  display block
  margin-top 8px

.map_input
  margin-top 75px
  position relative
  display inline-block
  label
    color #fff
    font-size 14px
    display inline-block
    margin-right 10px
    font-family reg
  input
    font-family italic
    font-size 14px
    border none
    height 30px
    width 260px
    display inline-block
    color inputgrey
    padding 0 5px
    box-sizing border-box


.service_bottom
  margin-top 115px


.payment_methods
  list-style none
  margin 28px 0 0 0
  padding 0
  clearfix()
  li
    display block
    float left
    margin 0 30px 20px 0
    border-radius 5px
    a
      display block
    img
      display block
      border-radius 5px


.more_payment
  font-size 14px
  color #fff
  font-family italic
  margin-top 18px