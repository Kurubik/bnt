.e-contactInformation
  position absolute
  left 100px
  top 320px
  font-family reg
  font-size 14px
  line-height 20px
  opacity 0.65

.e-country_contacts
  position absolute
  left 450px
  top 315px
  width 420px
  ul
    width 210px
    margin 0
    padding 0
    display inline-block
    vertical-align top
    list-style none
    font-size 16px
    line-height 22px
    li
      font-family heavy
      &:first-child
        font-family reg
        color rgba(255,255,255,0.3)

.e-contact_form_holder
  position relative

.e-support_holder-company
  position absolute
  left 100px
  top 0px


.e-form_holder-company
  position relative
  left 450px
  width 385px
  margin-top 40px

.e-contact_form
  position relative
  font-size 14px
  line-height 20px
  *
    border-radius 0
    border none
  label
    display block
    margin-bottom 5px
  input
    display block
    width 100%
    height 30px
    padding 0 5px
    box-sizing border-box
    margin-bottom 15px
    line-height 30px
    color inputgrey
  textarea
    display block
    width 100%
    height 100px
    resize none
    box-sizing border-box
    padding 5px
    color inputgrey
  button
    height 46px
    margin-top 20px
    padding-left 28px
    padding-right 43px
    background-color rgb(71,68,63)
